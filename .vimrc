set nocompatible
set encoding=utf-8
set hidden
syntax on
set synmaxcol=2048

set autoindent
set smartindent
set backspace=indent,eol,start

set smartindent
set shiftwidth=4
set tabstop=4
set noexpandtab

set textwidth=0
set nolinebreak
set nowrap


set virtualedit=all

set hlsearch
set incsearch
set ignorecase
set smartcase
set wrapscan


set laststatus=2

set relativenumber
set ruler
set showcmd
set showmatch
set showmode
set title
set scrolloff=3
set cmdheight=2
